<?php

/**
 * @file
 * Contains ymca_migrate.module.
 */

/**
 * Implements hook_entity_delete().
 */
function ymca_migrate_entity_delete($entity, $type) {
  if ($entity instanceof \Drupal\node\NodeInterface) {
    if ($entity->bundle() == 'article') {
      db_delete('migrate_map_ymca_migrate_node_page')
        ->condition('destid1', $entity->id())
        ->execute();
    }
  }
}
