{% if content.field_sidebar.0 is defined %}
  {% set classes = 'copy col-sm-7 col-sm-push-5 col-md-6 col-md-push-3' %}
{% else %}
  {% set classes = 'copy col-sm-7 col-sm-push-5 col-md-9 col-md-push-3' %}
{% endif %}
<div class="{{ classes }}">
  {% block maincontent %}{% endblock %}
</div>

<div class="hidden-xs col-sm-5 col-md-3 col-sm-pull-7 col-md-pull-6 subnav">
  {% block navigationsidebar %}
    {{ sidebar_navigation }}
    <div class="visible-sm promos sidebar-promos">
      {# Duplicate sidebar block contents for small screens #}
      {{ content.field_sidebar }}
    </div>
  {% endblock %}
</div>
{% if content.field_sidebar.0 is defined %}
<div class="col-md-3 sidebar-promos promos hidden-sm visible-xs">
  {{ content.field_sidebar }}
</div>
{% endif %}
